<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Search Gift Registry</title>
    </head>
    <body>
        <referenceBlock name="page.main.title" remove="true" />
        <referenceContainer name="content">
            <block class="Magenest\GiftRegistry\Block\Guest\ListSearch" name="list_search"
                   ifconfig="giftregistry/general/enable" template="Magenest_GiftRegistry::registry/searchgift.phtml"/>
        </referenceContainer>
    </body>
</page>
