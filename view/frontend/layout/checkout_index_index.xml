<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="shipping-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="shippingAddress" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="before-form" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="shipping_registry" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Magenest_GiftRegistry/js/view/checkout/shipping/shipping-registry</item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                        <item name="shippingAdditional" xsi:type="array">
                                                            <item name="component" xsi:type="string">uiComponent</item>
                                                            <item name="displayArea" xsi:type="string">shippingAdditional</item>
                                                            <item name="children" xsi:type="array">
                                                                <item name="giftregistry-guest-message" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Magenest_GiftRegistry/js/view/checkout/shipping/guest-message</item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="shipping-information" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="ship-to" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="gr-guest-message-info" xsi:type="array">
                                                            <item name="component" xsi:type="string">Magenest_GiftRegistry/js/view/checkout/shipping/message-info</item>
                                                            <item name="displayArea" xsi:type="string">gr-guest-message-info</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="template" xsi:type="string">Magenest_GiftRegistry/shipping-information/messageinfo</item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
